{{! Form to add a Product }}
<div class="d-flex p-5">

  <form class="d-flex flex-column gap-2 m-3" id="addForm">
    <input
      id="title"
      type="text"
      name="title"
      placeholder="Product Name"
    />
    <input
      id="price"
      type="text"
      name="price"
      placeholder="Product Price"
    />
    <input
      id="description"
      type="text"
      name="description"
      placeholder="Product Description"
    />
    <button type="submit">Add Product</button>
  </form>

  {{! Form to delete the product }}

  <form class="d-flex flex-column gap-2 m-3" id="deleteForm">
    <input id="id" type="text" name="id" placeholder="Product ID" />
    <button type="submit">Delete Product</button>
  </form>
</div>

{{! Show all the products }}
<div id="productsList"></div>

